<%= form_with(model: product_category, local: true) do |form| %>
  <% if product_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product_category.errors.count, "erro") %>:</h2>

      <ul>
        <% product_category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-row">
  <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="field">
    <%= form.label :name, "Nome" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Nome da categoria" %>
  </div>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12 actions">
    <%= form.submit "Salvar", class: "btn btn-orange right" %>
    <%= link_to 'Cancelar', product_categories_path, class: "right btn btn-orange" %>
  </div>
</div>
  

  
<% end %>

