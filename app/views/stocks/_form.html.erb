<%= form_with(model: stock, local: true) do |form| %>
  <% if stock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(stock.errors.count, "erro") %>:</h2>

      <ul>
        <% stock.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-row">
  <div class="form-group col-lg-8 col-md-8 col-sm-8 col-xs-8">
    <div class="field">      
    <%= form.label :product_id, "Produto" %>
    <%= form.hidden_field :product_id %>
    <%= form.text_field :product_name, class: "form-control", disabled: true, value: Product.find(stock.product_id).name %>
  </div>
  </div>
  <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-4">
    <div class="field">
    <%= form.label :quantity, "Quantidade" %>  
    <%= form.number_field :quantity, class: "form-control", placeholder: "Informe a quantidade", :required => true %>
  </div>
  </div>
</div>

 <div class="form-row">
  <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12 actions">
    <%= form.submit "Salvar", class: "btn btn-orange right" %>
    <%= link_to 'Cancelar', stocks_path, class: "right btn btn-orange" %>
  </div>
</div>
<% end %>
