<% @page_title =  "Cardápio" %>

<div class="container">
    <div class="page-header" align="center">
        <h1>Conheça nosso cardápio<br /><small>e faça seus pedidos</small></h1>
    </div>

    <p id="notice"><%= notice %></p>

    <div class="filter">
        <%= form_tag(products_path, :method => :get) do %>    
            <div class="form-row">
                <div class="form-group col-lg-10 col-md-10 col-sm-10 col-xs-12">
                    <%= text_field_tag 'term', params[:term], :class => "form-control", :placeholder => "Buscar por produto" %>
                </div>    
            </div>        
            <div class="form-group col-lg-2 col-md-2 col-sm-2 col-xs-12 actions">
                 <%= button_tag :class => "btn btn-orange" do %>            
                     <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z"/>
                      <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"/>
                    </svg>&nbsp;&nbsp;Filtrar
                 <%end%>
            </div>            
        <%end%>
    </div>  

    <% if @categories.empty? %>
        <p class="text-center">O cardápio está vazio.</p>    
    <%end%>

    <div class="food-menu">    
        <div class="swiper-container">
            <div class="swiper-wrapper">
                <% @categories.each do |category| %>
                    <div class="item swiper-slide">
                        <a href="#"><%=  category.name%></a>

                        <% if category.products.empty? %>
                            <br>
                            <p class="text-center">Nenhum produto cadastrado para esta categoria.</p>    
                        <%end%>

                        <% category.products.each do |product| %>                            
                            <div class="row menu-item">
                                <div class="col-sm-6 col-md-5 col-lg-4 col-xs-12">
                                    <%= image_tag(product.image.menu_thumb.url, alt: product.name, class: "img-thumbnail") %>                                
                                </div>
                                <div class="col-sm-6 col-md-7 col-lg-8 col-xs-12">
                                    <h3 class="title"><%= product.name %></h3>
                                    <h4 class="price">R$ <%= number_with_precision(product.price, precision: 2) %></h4>
                                    <p><%= product.description %></p>
                                    <div class="input-group item-quantity">
                                      <span class="minus input-group-addon">-</span>
                                      <input type="text" class="form-control" placeholder="0">
                                      <span class="plus input-group-addon">+</span>
                                    </div>                             
                                </div>                   
                            </div>
                        <%end%>                        
                    </div>                                                  
                <%end%>                              
            </div>                       
            <div class="swiper-pagination"></div>
        </div>
    </div>
</div>
