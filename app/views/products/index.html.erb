<% @page_title =  "Produtos" %>

<div class="container">

<div class="page-header" align="center">
      <h1>Lista de produtos<br><small>Veja, edite ou remova produtos</small></h1>
  </div>

  <p id="notice"><%= notice %></p>

  <div class="filter">
    <%= form_tag(products_path, :method => :get) do %>    
    <div class="form-row">
      <div class="form-group col-lg-5 col-md-5 col-sm-12 col-xs-12">
        <%= text_field_tag 'name', nil, :class => "form-control", :placeholder => "Buscar por produto" %>
      </div>
       <div class="form-group col-lg-5 col-md-5 col-sm-12 col-xs-12">
         <%= select_tag "category", options_for_select(ProductCategory.all.collect{|u| [u.name, u.id]}), :include_blank => "-- Buscar por categoria --", :class => "form-control" %>
      </div>
      <div class="form-group col-lg-2 col-md-2 col-sm-12 col-xs-12 actions">
         <%= button_tag :class => "btn btn-orange" do %>            
         <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z"/>
          <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"/>
        </svg>&nbsp;&nbsp;Filtrar
         <%end%>
    </div>
    </div>
  <%end%>
  </div>  

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Categoria</th>
      <th>Descrição</th>    
      <th class="number">Valor (R$)</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.product_category.name %></td>
        <td><%= product.description %></td>
        <td class="number"><%= number_with_precision(product.price, precision: 2) %></td>
        <td class="icons">
            <%= link_to product do%>
              <svg width="1em" height="1em" viewBox="0 0 16 16" class="icon bi bi-eye" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.134 13.134 0 0 0 1.66 2.043C4.12 11.332 5.88 12.5 8 12.5c2.12 0 3.879-1.168 5.168-2.457A13.134 13.134 0 0 0 14.828 8a13.133 13.133 0 0 0-1.66-2.043C11.879 4.668 10.119 3.5 8 3.5c-2.12 0-3.879 1.168-5.168 2.457A13.133 13.133 0 0 0 1.172 8z"/>
                <path fill-rule="evenodd" d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
              </svg>  
            <%end%> 
            <%= link_to edit_product_path(product) do %>
              <svg width="1em" height="1em" viewBox="0 0 16 16" class="icon bi bi-pencil" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5L13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175l-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
              </svg>
            <%end%>             
            <%= link_to product, method: :delete, data: { confirm: 'Tem certeza que deseja remover o produto?' } do%>
              <svg width="1em" height="1em" viewBox="0 0 16 16" class="icon bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"></path>
                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"></path>
              </svg>
            <%end%>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

 <% if @products.empty? %>
  <p class="text-center">Não há nenhum produto cadastrado.</p>
  <%end%>

<center>
<%= will_paginate @products, :previous_label => '«', :next_label => '»' %>  
</center>


<br>

<%= link_to 'Incluir novo produto', new_product_path, class: "btn btn-orange right" %>
</div>

